<div class="sign-in d-flex flex-column align-items-center mx-auto mt-5">
  <h3 class="mt-5">Sign In</h3>
  <form class="p-3" action="/api/signin" method="POST">
    <div class="form-floating mb-3">
      <input type="email" name="email" class="form-control" id="floatingInputEmail" placeholder="Email">
      <label for="floatingInputEmail">email</label>
    </div>
    <div class="form-floating mb-3">
      <input type="password" name="password" class="form-control" id="floatingInputPassword" placeholder="Password">
      <label for="floatingInputPassword">password</label>
    </div>
    <div class="d-flex justify-content-center">
      <button type="button" class="btn btn-primary sign-in-button" style="width: 100%;">submit</button>
    </div>
  </form>
  <div class="footer">
    <div class="error-message mb-2 text-center"></div>
    <a href="/signup" class="btn" style="text-decoration: underline">sign up if no account yet!</a>
  </div>
</div>
<script src="/js/signin.js"></script>